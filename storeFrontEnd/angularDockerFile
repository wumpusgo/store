### STAGE 1: Build ###
# FROM node:12.7-alpine as build
FROM node as build
LABEL stage=builder
WORKDIR /usr/src/app
COPY ./store/package.json ./
RUN npm install
COPY ./store/. .
RUN npm run build

### STAGE 2: Run ###
# FROM nginx:1.17.1-alpine
FROM nginx
# COPY default.conf /etc/nginx/conf.d/default.conf
COPY --from=build /usr/src/app/dist/store /usr/share/nginx/html
EXPOSE 80
